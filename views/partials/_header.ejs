<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-primary">
    <a class="navbar-brand" href="/">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <% if (user === undefined) { %>
    <div class="navbar-nav">
      <a class="nav-item nav-link" href="/urls">URLs</a>
    </div>
    <div class="navbar-nav">
      <a class="nav-item nav-link" href="/login">Login</a>
    </div>
    <div class="navbar-nav">
      <a class="nav-item nav-link" href="/register">Register</a>
    </div>
    <% } else { %>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <form class="form-inline" action="/logout" method="POST">
      <div class="form-group mb-2">
        <label for='username' style="padding-right: 20px">Logged in as <%= user.email %> </label>
        <button type="submit" class="btn btn-warning">Logout</button>
      </div>
    </form>
    <% } %>
  </nav>
</header>